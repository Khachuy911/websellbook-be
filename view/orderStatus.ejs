    <!-- BODY -->
    <div class="container">
      <nav
        class="custom-breadcrumb"
        style="--bs-breadcrumb-divider: '>'"
        aria-label="breadcrumb"
      >
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a class="breadcrumb-home" href="/product">Trang chủ</a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">Đơn hàng</li>
        </ol>
      </nav>
      <hr />
      <h4>Xin chào, <%= data.currentUser.username%></h4>
      <div class="custom-tbl-order">
        <table class="table text-center">
          <thead>
            <tr class="text-center">
              <th scope="col"></th>
              <th scope="col">Mã đơn hàng</th>
              <th scope="col">
                <div class="custom-sort">
                  <div class="text-sort">Thời gian đặt hàng</div>
                  <div class="title-category-option">
                    <div class="up">
                      <a
                        class="a-custom-sort"
                        href="/order/myorder?title=createdAt&type=1"
                        ><i class="fa-solid fa-caret-up"></i
                      ></a>
                    </div>
                    <div class="down">
                      <a
                        class="a-custom-sort"
                        href="/order/myorder?title=createdAt&type=0"
                        ><i class="fa-solid fa-caret-down"></i
                      ></a>
                    </div>
                  </div>
                </div>
              </th>
              <th scope="col">Voucher (giảm)</th>
              <th scope="col">
                <div class="custom-sort">
                  <div class="text-sort">Tổng đơn giá</div>
                  <div class="title-category-option">
                    <div class="up">
                      <a
                        class="a-custom-sort"
                        href="/order/myorder?title=totalPrice&type=1"
                        ><i class="fa-solid fa-caret-up"></i
                      ></a>
                    </div>
                    <div class="down">
                      <a
                        class="a-custom-sort"
                        href="/order/myorder?title=totalPrice&type=0"
                        ><i class="fa-solid fa-caret-down"></i
                      ></a>
                    </div>
                  </div>
                </div>
              </th>
              <th scope="col">Thanh toán</th>
              <th scope="col">
                <div class="custom-sort">
                  <div class="text-sort">Trạng thái đơn</div>
                  <div class="title-category-option">
                    <div class="up">
                      <a
                        class="a-custom-sort"
                        href="/order/myorder?title=orderStatus&type=1"
                        ><i class="fa-solid fa-caret-up"></i
                      ></a>
                    </div>
                    <div class="down">
                      <a
                        class="a-custom-sort"
                        href="/order/myorder?title=orderStatus&type=0"
                        ><i class="fa-solid fa-caret-down"></i
                      ></a>
                    </div>
                  </div>
                </div>
              </th>
              <th scope="col" class="text-end">Hành động</th>
            </tr>
          </thead>
          <tbody>
            <% data.rows.forEach(order => { %>
            <tr data-order="<%= order.id%>" class="text-center">
              <th scope="row"><i class="fa-solid fa-dolly"></i></th>
              <td><%= order.orderCode %></td>              
              <td><%= order.createdAt %></td>
              <td>
                <%= order?.Voucher?.discountAmount.toLocaleString('vn-VN', {
                style: 'currency', currency: 'VND' }) || "_" %>
              </td>
              <td>
                <%= order.totalPrice.toLocaleString('vn-VN', { style:
                'currency', currency: 'VND' }) %>
              </td>
              <%if(order.payment === 1){%>
                <td>Thanh toán khi nhận</td>
                <%}else{%>
                <td style="color: seagreen">Đã thanh toán paypal</td>
                  <%}%>
              <% if(order.orderStatus == 0){ %>
              <td>Chờ xác nhận</td>
              <td class="text-end">
                <button
                  data-order="<%= order.id%>"
                  class="btn-cancel-order btn btn-danger btn-sm"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModalCancel"
                >
                  Huỷ đơn
                </button>
                <button
                  data-order="<%= order.id%>"
                  class="btn-detail-order btn btn-primary btn-sm"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModalOrder"
                >
                  Chi tiết
                </button>
              </td>
              <%} else if(order.orderStatus == 1) {%>
              <td style="color: blue">Xác nhận</td>
              <td class="text-end">
                <button
                  data-order="<%= order.id%>"
                  class="btn-detail-order btn btn-primary btn-sm"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModalOrder"
                >
                  Chi tiết
                </button>
              </td>
              <%} else if(order.orderStatus == 2) {%>
              <td style="color: blue">Chờ giao hàng</td>
              <td class="text-end">
                <button
                  data-order="<%= order.id%>"
                  class="btn-detail-order btn btn-primary btn-sm"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModalOrder"
                >
                  Chi tiết
                </button>
              </td>
              <%} else if(order.orderStatus == 3) {%>
              <td style="color: blue">Đang giao</td>
              <td class="text-end">
                <button
                  data-order="<%= order.id%>"
                  class="btn-detail-order btn btn-primary btn-sm"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModalOrder"
                >
                  Chi tiết
                </button>
              </td>
              <%} else if(order.orderStatus == 4) {%>
              <td style="color: green">Hoàn thành</td>
              <td class="text-end">
                <button
                  data-order="<%= order.id%>"
                  class="btn-detail-order btn btn-primary btn-sm"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModalOrder"
                >
                  Chi tiết
                </button>
              </td>
              <%} else if(order.orderStatus == 5) {%>
              <td style="color: red">Đã huỷ</td>
              <td class="text-end">
                <button
                  data-order="<%= order.id%>"
                  class="btn-detail-order btn btn-primary btn-sm"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModalOrder"
                >
                  Chi tiết
                </button>
              </td>
              <%}%>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <div
      class="modal fade"
      id="exampleModalOrder"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              Chi tiết đơn hàng <i class="fa-solid fa-bags-shopping"></i>
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <form id="submit-order">
            <div class="modal-body">
              <div class="order-id-status">
                <div class="order-display-title">
                  <p id="orderId" style="margin-left: 20px"></p>
                  <p id="orderAmount" style="margin-left: 20px"></p>
                </div>
                <div class="order-display-status">
                  <p
                    id="orderStatus"
                    style="
                      text-align: center;
                      margin-right: 20px;
                      border-radius: 10px;
                      width: 130px;
                      padding: 10px;
                      color: white;
                      background-color: rgb(105, 192, 233);
                    "
                  ></p>
                </div>
              </div>
              <p id="orderTime" style="margin-left: 20px"></p>
              <p id="orderPayment" style="margin-left: 20px"></p>
              <p id="orderAddress" style="margin-left: 20px"></p>
              <p id="orderPhone" style="margin-left: 20px"></p>
              <p id="orderVoucher" style="margin-left: 20px"></p>
              <div id="listProduct" style="margin-left: 20px"></div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Đóng
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div
      class="modal fade"
      id="exampleModalCancel"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Xác nhận huỷ đơn của bạn !
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">Bạn có muốn huỷ bỏ đơn hàng này không ?</div>
          <p class="id-fake" hidden></p>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
