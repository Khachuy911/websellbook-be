<!-- toastify -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

<script>
  $.ajax({
    url: `/user`,
    type: "GET",
    success: (response) => {
      console.log(response);
      let listSelect = response?.data?.rows.map(
        (item, index) => {
          let disabled;
          if(item.UserRoles[0].Role.name=="admin"){
            disabled = "disabled"
          }
          return `<tr>
                                    <td style="text-align:center">${index + 1
            }</td>
                                    <td style="max-width:200px">${item.username
            }</td>
            <td>${item.email}</td>
                                    <td>${item.phone}</td>
                                    <td>${item.address}</td>

                                    <td>${item.UserRoles[0].Role.name}</td>
                                    <td style="max-width:120px;text-align:center">
                                        <button type="button" style="width:120px" data-id="${item.id}" ${disabled} data-bs-toggle="modal" data-bs-target="#exampleModalUpdate" class="btn btn-primary">Phân quyền</button>                                    
                                        <button type="button" style="width:120px;margin-top:4px" data-id="${item.id}" data-bs-toggle="modal" data-bs-target="#exampleModalDelete" class="btn btn-delete btn-danger">Xoá ngay</button>
                                    </td>
                                </tr>`
        });
      $("#table-body")[0].innerHTML = listSelect.join("");
      let table = $("#myTable").DataTable({
        select: false,
        pageLength: 5,
        stateSave: true,
        lengthMenu: [5, 10, 15, 20],
        columnDefs: [
          {
            searchPanes: {
              show: true,
            },
            targets: [1, 3, 4 , 5],
          },
        ],
        order: [[6, "DESC"]],
        language: {
          sEmptyTable: "Không có dữ liệu trong bảng",
          sInfo:
            "Đang hiển thị từ _START_ đến _END_ trong tổng số _TOTAL_ kết quả",
          sInfoEmpty: "Hiển thị từ 0 đến 0 trong tổng số 0 kết quả",
          sInfoFiltered: "(được lọc từ tổng số _MAX_ kết quả)",
          sInfoPostFix: "",
          sInfoThousands: ",",
          sLengthMenu: "Hiển thị _MENU_ kết quả",
          sLoadingRecords: "Đang tải...",
          sProcessing: "Đang xử lý...",
          sSearch: "Tìm kiếm:",
          sZeroRecords: "Không tìm thấy kết quả phù hợp",
          oPaginate: {
            sFirst: "Đầu",
            sLast: "Cuối",
            sNext: "Tiếp",
            sPrevious: "Trước",
          },
          oAria: {
            sSortAscending: ": sắp xếp cột tăng dần",
            sSortDescending: ": sắp xếp cột giảm dần",
          },
        },
      });
      new $.fn.dataTable.SearchPanes(table, {});
      table.searchPanes.container().prependTo(table.table().container());
      table.searchPanes.resizePanes();
      try {
        $(".dtsp-collapseAll")[0].click();
      } catch (error) { }
    },
    error: (data) => {
      Toastify({
        text: data.responseJSON.errorCode,
        duration: 2000,
        newWindow: true,
        //close: true,
        offset: {
          x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
          y: 10, // vertical axis - can be a number or a string indicating unity. eg: '2em'
        },
        gravity: "top", // `top` or `bottom`
        position: "right", // `left`, `center` or `right`
        stopOnFocus: true, // Prevents dismissing of toast on hover
        style: {
          background: "linear-gradient(to right, red, red)",
          width: "250px",
          fontSize: "16px",
        },
      }).showToast();
    },
  });

  let deleteId;
  $("#exampleModalDelete").on("show.bs.modal", function (event) {
    const button = $(event.relatedTarget);
    deleteId = button.data("id");
  });
  $("#btn-delete-success").click((e) => {
    e.preventDefault();
    $.ajax({
      url: `/user/deletesoft/${deleteId}`,
      type: "DELETE",
      success: (response) => {
        Toastify({
          text: response.message,
          duration: 2000,
          newWindow: true,
          //close: true,
          offset: {
            x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
            y: 10, // vertical axis - can be a number or a string indicating unity. eg: '2em'
          },
          gravity: "top", // `top` or `bottom`
          position: "right", // `left`, `center` or `right`
          stopOnFocus: true, // Prevents dismissing of toast on hover
          style: {
            background: "linear-gradient(to right, green, green)",
            width: "250px",
            fontSize: "16px",
          },
        }).showToast();
        setTimeout(() => {
          $("#exampleModalDelete").modal("hide");
          location.reload();
        }, "2000");
      },
      error: (data) => {
        Toastify({
          text: data.responseJSON.errorCode,
          duration: 2000,
          newWindow: true,
          //close: true,
          offset: {
            x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
            y: 10, // vertical axis - can be a number or a string indicating unity. eg: '2em'
          },
          gravity: "top", // `top` or `bottom`
          position: "right", // `left`, `center` or `right`
          stopOnFocus: true, // Prevents dismissing of toast on hover
          style: {
            background: "linear-gradient(to right, red, red)",
            width: "250px",
            fontSize: "16px",
          },
          onClick: function () { }, // Callback after click
        }).showToast();
      },
    });
  });

  let UpdateId;

  $("#exampleModalUpdate").on("show.bs.modal", function (event) {
    const button = $(event.relatedTarget);
    UpdateId = button.data("id");
  });

  $("#btn-update-success").click((e) => {
    e.preventDefault();
    $.ajax({
      url: `/user/updateBecomeAdmin/`,
      type: "PATCH",
      data: { id: UpdateId },
      success: (response) => {
        Toastify({
          text: "Phân quyền admin thành công",
          duration: 2000,
          newWindow: true,
          //close: true,
          offset: {
            x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
            y: 10, // vertical axis - can be a number or a string indicating unity. eg: '2em'
          },
          gravity: "top", // `top` or `bottom`
          position: "right", // `left`, `center` or `right`
          stopOnFocus: true, // Prevents dismissing of toast on hover
          style: {
            background: "linear-gradient(to right, green, green)",
            width: "300px",
            fontSize: "16px",
          },
        }).showToast();
        setTimeout(() => {
          $("#exampleModalDelete").modal("hide");
          location.reload();
        }, "1000");
      },
      error: (data) => {
        Toastify({
          text: data.responseJSON.errorCode,
          duration: 2000,
          newWindow: true,
          //close: true,
          offset: {
            x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
            y: 10, // vertical axis - can be a number or a string indicating unity. eg: '2em'
          },
          gravity: "top", // `top` or `bottom`
          position: "right", // `left`, `center` or `right`
          stopOnFocus: true, // Prevents dismissing of toast on hover
          style: {
            background: "linear-gradient(to right, red, red)",
            width: "250px",
            fontSize: "16px",
          },
          onClick: function () { }, // Callback after click
        }).showToast();
      },
    });
  });
</script>
