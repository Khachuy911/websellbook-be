                        }
                    }]
                }
            }
        });

        // Users Chart
        var ctx = document.getElementById('users-chart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['USA', 'Canada', 'Mexico'],
                datasets: [{
                    label: 'Users by Country', backgroundColor: [
                        'rgb(54, 162, 235)',
                        'rgb(255, 99, 132)',
                        'rgb(255, 205, 86)'
                    ],
                    borderColor: 'white',
                    data: [55, 30, 15]
                }]
            },
            options: {
                legend: {
                    position: 'bottom'
                }
            }
        });
    </script>
