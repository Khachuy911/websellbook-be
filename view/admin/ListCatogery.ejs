<script>
  $(document).on("click", ".category", (e) => {
    console.log($(e.currentTarget).data("id"));
    $("#selectCategory").val($(e.currentTarget).data("id"));
    if ($("#selectCategory").val()) {
      $(".btn-delete")[0].disabled = false;
