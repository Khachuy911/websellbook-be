  });

  $(document).on("click", ".btn-update", function (e) {
    const id = $("#selectCategory").val();
    const dataCategory = $(`.category[data-id='${id}']`)[0].children;
    $("#nameVoucher").val(dataCategory[1].innerText);

    $("#handleSubmitFormUpdate").submit((e) => {
      e.preventDefault();
      const data = $("#handleSubmitFormUpdate").serialize();
