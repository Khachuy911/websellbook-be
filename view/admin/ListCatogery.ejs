<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>


<script>
    $.ajax({
        url: `/category`,
        type: "GET",
        success: (response) => {
            console.log(response)
            let listSelect = response?.data?.rows.map((item, index) => (`
                        <div class="category" data-id=${item.id} style="margin: 10px;">
                            <img src="${item.image.replace("public", "")}" alt="catogery">
                            <h3>${item.name}</h3>
                        </div>
                        `
            ))

            let listSelect2 = response?.data?.rows.map((item, index) => (`
                <option value="${item.id}">${item.name}</option>`
            ))
            $("#list-catogery")[0].innerHTML = listSelect.join("")
            $("#selectCategory")[0].innerHTML = "<option value=''>Lựa chọn category</option>" + listSelect2.join("")
            $("#selectCategory").change(e => {
                if ($("#selectCategory").val()) {
                    $(".btn-delete")[0].disabled = false
                    $(".btn-update")[0].disabled = false
                }
                else {
                    $(".btn-delete")[0].disabled = true
                    $(".btn-update")[0].disabled = true

                }
            })
            $(".btn-delete").click(e => {
                const id = $("#selectCategory").val()
                const dataCategory = $(`.category[data-id='${id}']`)[0].children
                $("#ImgCategory")[0].src = dataCategory[0].getAttribute("src")
                $("#H3Category")[0].innerText = dataCategory[1].innerText
            })



        },
        error: (data) => {
            Toastify({
                text: data.responseJSON.errorCode,
                duration: 2000,
                newWindow: true,
                //close: true,
                offset: {
                    x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
                    y: 10 // vertical axis - can be a number or a string indicating unity. eg: '2em'
                },
                gravity: "top", // `top` or `bottom`
                position: "right", // `left`, `center` or `right`
                stopOnFocus: true, // Prevents dismissing of toast on hover
                style: {
                    background: "linear-gradient(to right, red, red)",
                    width: "250px",
                    fontSize: "16px"
                },
            }).showToast();
        }
    })
    $(document).on("click", "#btn-delete-success", function () {
        const id = $("#selectCategory").val()
        $.ajax({
            url: `/category`,
            type: "DELETE",
            data: { ids: id },
            success: (response) => {
                Toastify({
                    text: response.message,
                    duration: 2000,
                    newWindow: true,
                    //close: true,
                    offset: {
                        x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
                        y: 10 // vertical axis - can be a number or a string indicating unity. eg: '2em'
                    },
                    gravity: "top", // `top` or `bottom`
                    position: "right", // `left`, `center` or `right`
                    stopOnFocus: true, // Prevents dismissing of toast on hover
                    style: {
                        background: "linear-gradient(to right, green, green)",
                        width: "250px",
                        fontSize: "16px"
                    },
                }).showToast();
                setTimeout(() => {
                    $("#exampleModalDelete").modal("hide");
                    location.reload();
                }, "2000")
            },
            error: (data) => {
                Toastify({
                    text: data.responseJSON.errorCode,
                    duration: 2000,
                    destination: "http://localhost:3000/",
                    newWindow: true,
                    //close: true,
                    offset: {
                        x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
                        y: 10 // vertical axis - can be a number or a string indicating unity. eg: '2em'
                    },
                    gravity: "top", // `top` or `bottom`
                    position: "right", // `left`, `center` or `right`
                    stopOnFocus: true, // Prevents dismissing of toast on hover
                    style: {
                        background: "linear-gradient(to right, red, red)",
                        width: "250px",
                        fontSize: "16px"
                    },
                    onClick: function () { } // Callback after click
                }).showToast();
            }
        })

    });

    $(document).on("click", ".btn-update", function (e) {
        const id = $("#selectCategory").val()
        const dataCategory = $(`.category[data-id='${id}']`)[0].children
        $("#nameVoucher").val(dataCategory[1].innerText)

        $("#handleSubmitFormUpdate").submit(e => {
            e.preventDefault();
            const data = $("#handleSubmitFormUpdate").serialize();
            let form = document.getElementById('handleSubmitFormUpdate');
            let formData = new FormData(form);
            $.ajax({
                url: `/category/${id}`,
                type: "PATCH",
                data: formData,
                processData: false,
                contentType: false,
                success: (response) => {
                    Toastify({
                        text: response.message,
                        duration: 2000,
                        newWindow: true,
                        //close: true,
                        offset: {
                            x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
                            y: 10 // vertical axis - can be a number or a string indicating unity. eg: '2em'
                        },
                        gravity: "top", // `top` or `bottom`
                        position: "right", // `left`, `center` or `right`
                        stopOnFocus: true, // Prevents dismissing of toast on hover
                        style: {
                            background: "linear-gradient(to right, green, green)",
                            width: "250px",
                            fontSize: "16px"
                        },
                    }).showToast();
                    setTimeout(() => {
                        $("#exampleModalUpdate").modal("hide");
                        location.reload();
                    }, "2000")
                },
                error: (data) => {
                    Toastify({
                        text: data.responseJSON.errorCode,
                        duration: 2000,
                        destination: "http://localhost:3000/",
                        newWindow: true,
                        //close: true,
                        offset: {
                            x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
                            y: 10 // vertical axis - can be a number or a string indicating unity. eg: '2em'
                        },
