<script>
  $.ajax({
    url: `/category`,
    type: "GET",
    success: (response) => {
      console.log(response);
      let listSelect = response?.data?.rows.map(
        (item, index) => `
                        <div class="category" data-id=${item.id
          } style="margin: 10px;cursor: pointer;">
                            <img src="${item.image.replace(
            "public",
            ""
          )}" alt="catogery">
                            <h3>${item.name}</h3>
                        </div>
                        `
      );

      let listSelect2 = response?.data?.rows.map(
        (item, index) => `
                <option value="${item.id}">${item.name}</option>`
      );
      $("#list-catogery")[0].innerHTML = listSelect.join("");
      $("#selectCategory")[0].innerHTML =
        "<option value=''>Lựa chọn category</option>" + listSelect2.join("");
      $("#selectCategory").change((e) => {
        if ($("#selectCategory").val()) {
          $(".btn-delete")[0].disabled = false;
          $(".btn-update")[0].disabled = false;
        } else {
          $(".btn-delete")[0].disabled = true;
          $(".btn-update")[0].disabled = true;
        }
      });
      $(".btn-delete").click((e) => {
        const id = $("#selectCategory").val();
        const dataCategory = $(`.category[data-id='${id}']`)[0].children;
        $("#ImgCategory")[0].src = dataCategory[0].getAttribute("src");
        $("#H3Category")[0].innerText = dataCategory[1].innerText;
      });
    },
    error: (data) => {
      Toastify({
        text: data.responseJSON.errorCode,
        duration: 2000,
        newWindow: true,
        //close: true,
        offset: {
          x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
          y: 10, // vertical axis - can be a number or a string indicating unity. eg: '2em'
        },
        gravity: "top", // `top` or `bottom`
        position: "right", // `left`, `center` or `right`
        stopOnFocus: true, // Prevents dismissing of toast on hover
        style: {
          background: "linear-gradient(to right, red, red)",
          width: "250px",
          fontSize: "16px",
        },
      }).showToast();
    },
  });
  $(document).on("click", "#btn-delete-success", function () {
    const id = $("#selectCategory").val();
