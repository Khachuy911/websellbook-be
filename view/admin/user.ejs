<!-- toastify -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

<script>
    $.ajax({
        url: `/user/getme`,
        type: "GET",
        success: (response) => {
            console.log(response)
            const data = response.data
            $("#fullname").val(data.username)
            $("#email").val(data.email)
            $("#address").val(data.address)
            $("#phone").val(data.phone)
            $("#role").val(data.UserRoles[0].Role.name)
            $(".Update").click(e => {
                $("#fullname")[0].disabled = false
                $("#phone")[0].disabled = false
                $("#address")[0].disabled = false
                $(".Update")[0].disabled = true
                $(".Save")[0].disabled = false
                $(".Save")[0].style.display = "block"
                $(".Update")[0].style.display = "none"
            })

            $(".changePassWord").click(e => {
                $("#exampleModalChangePassword").modal('show');
            })
            $("#FormSubmit").submit(e => {
                e.preventDefault();
                const dataForm = $("#FormSubmit").serialize();
                $.ajax({
                    url: `/user`,
                    type: "PATCH",
                    data:dataForm,
                    success: (response) => {
                        Toastify({
                            text: response?.message,
                            duration: 2000,
                            newWindow: true,
                            offset: {
                                x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
                                y: 10 // vertical axis - can be a number or a string indicating unity. eg: '2em'
                            },
                            gravity: "top", // `top` or `bottom`
                            position: "right", // `left`, `center` or `right`
                            stopOnFocus: true, // Prevents dismissing of toast on hover
                            style: {
                                background: "linear-gradient(to right, green, green)",
                                width: "250px",
                                fontSize: "16px"
                            },
                        }).showToast();
                        $("#fullname")[0].disabled = true
                        $("#phone")[0].disabled = true
                        $("#address")[0].disabled = true
                        $(".Update")[0].disabled = false
                        $(".Save")[0].disabled = true
                        $(".Save")[0].style.display = "none"
                        $(".Update")[0].style.display = "block"
                    },
                    error: (error) => {
                        Toastify({
                            text: error?.responseJSON?.errorCode,
                            duration: 2000,
                            newWindow: true,
                            //close: true,
                            offset: {
                                x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
                                y: 10 // vertical axis - can be a number or a string indicating unity. eg: '2em'
                            },
                            gravity: "top", // `top` or `bottom`
                            position: "right", // `left`, `center` or `right`
                            stopOnFocus: true, // Prevents dismissing of toast on hover
                            style: {
                                background: "linear-gradient(to right, red, red)",
                                width: "250px",
                                fontSize: "16px"
                            },
                        }).showToast();
                    }
                })
            })
            $("#formChangePassword").submit(e=>{
                e.preventDefault();
                const data = $("#formChangePassword").serialize();

                const password = $("#password").val();
                const newPassword = $("#newPassword").val();
                const changeNewPassword = $("#changeNewPassword").val();
                if(password==""||newPassword==""||changeNewPassword==""){
                    $(".checkPassword")[0].innerText="Mật khẩu không được để trống"
                    $(".checkPassword")[0].style.display="block"
                }
                else if(newPassword.length<10||changeNewPassword.length<10){
                    $(".checkPassword")[0].innerText="Mật khẩu mới phải có độ dài lớn hơn 10"
                    $(".checkPassword")[0].style.display="block"

                }
                else if(newPassword!=changeNewPassword){
                    $(".checkPassword")[0].innerText="Mật khẩu mới không giống nhau"
                    $(".checkPassword")[0].style.display="block"
                }
                else {
                    $(".checkPassword")[0].style.display="none"
                    console.log(data)
                    $.ajax({
                    url: `/auth/updatePW`,
                    type: "PATCH",
                    data:data,
                    success: (response) => {
                        Toastify({
                            text: response?.message,
                            duration: 2000,
                            newWindow: true,
                            offset: {
                                x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
                                y: 10 // vertical axis - can be a number or a string indicating unity. eg: '2em'
                            },
                            gravity: "top", // `top` or `bottom`
                            position: "right", // `left`, `center` or `right`
                            stopOnFocus: true, // Prevents dismissing of toast on hover
                            style: {
                                background: "linear-gradient(to right, green, green)",
                                width: "250px",
                                fontSize: "16px"
                            },
                        }).showToast();
                        $("#exampleModalChangePassword").modal('hide');
                    },
                    error: (error) => {
                        Toastify({
                            text: error?.responseJSON?.errorCode,
                            duration: 2000,
                            newWindow: true,
                            //close: true,
                            offset: {
                                x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
                                y: 10 // vertical axis - can be a number or a string indicating unity. eg: '2em'
                            },
                            gravity: "top", // `top` or `bottom`
                            position: "right", // `left`, `center` or `right`
                            stopOnFocus: true, // Prevents dismissing of toast on hover
                            style: {
                                background: "linear-gradient(to right, red, red)",
                                width: "250px",
                                fontSize: "16px"
                            },
                        }).showToast();
                    }
                })
                }
            })
        },
        error: (data) => {
            Toastify({
                text: data.responseJSON.errorCode,
                duration: 2000,
                newWindow: true,
                //close: true,
                offset: {
                    x: 50, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
                    y: 10 // vertical axis - can be a number or a string indicating unity. eg: '2em'
                },
                gravity: "top", // `top` or `bottom`
                position: "right", // `left`, `center` or `right`
                stopOnFocus: true, // Prevents dismissing of toast on hover
                style: {
                    background: "linear-gradient(to right, red, red)",
                    width: "250px",
                    fontSize: "16px"
                },
            }).showToast();
        }
    })

</script>
