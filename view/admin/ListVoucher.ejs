    });

    $(document).on("click", ".btn-update", function (e) {
        const id = $(this).data("id");
        const element = $(`tr[data-id="${id}"]`)[0].children;

        $("#nameVoucher").val(element[1].innerText)

        $("#discountAmount").val(element[2].innerText)

        $("#quantity").val(element[3].innerText)

        const date = new Date(element[5].innerText);
        $("#expireDate")[0].value = date.toISOString().substr(0, 10);

        $("#handleSubmitFormUpdate").submit(e => {
            e.preventDefault();
            const data = $("#handleSubmitFormUpdate").serialize();
            $.ajax({
                url: `/voucher/${id}`,
                type: "PATCH",
                data: data,
                success: (response) => {
                    Toastify({
                        text: response.message,
                        duration: 2000,
                        newWindow: true,
                        //close: true,
                        offset: {
